{
    "compilerOptions": {
      "target": "es2016",
      "lib": ["ES2020"],
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true,
      "allowJs": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": [
      "vite.config.ts",
      "src/**/*.ts",  // Or wherever your type declarations are located
      "backend/**/*.ts"  // Include backend types if you have them
    ],
}